<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:orientation="vertical"
        android:background="#FF181B24"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp">

            <FrameLayout
                android:layout_width="74dp"
                android:layout_height="40dp"
                android:background="#FF262B38"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="11dp"
                    android:text="限价单"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13dp"/>
                <Spinner
                    android:layout_width="6dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="19dp"
                    android:background="#FFFFFF"></Spinner>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:layout_width="231dp"
                    android:layout_height="40dp"
                    android:background="#101319"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="205dp"
                    android:src="@mipmap/cancle"
                    android:background="#101319"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FF262B38"
                android:src="@mipmap/position"


                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿里巴巴"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="110.76(-0.47 -0.42%)"
                android:textColor="#FF31C46D"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="盘后"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="+0.23(+0.21%)"
                android:textColor="#FFFF3A3A"
                android:textSize="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="#FFFFFFFF"
                android:textSize="13dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="#FF262B38"
                android:src="@mipmap/minus"
                />
            <EditText
                android:layout_width="179dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:background="#101319"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:background="#FF262B38"
                android:src="@mipmap/add"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:background="#FF262B38"
                android:src="@mipmap/target"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textColor="#FFFFFFFF"
                android:textSize="13dp"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="#FF262B38"
                android:src="@mipmap/minus"
                />
            <EditText
                android:layout_width="179dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:background="#101319"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FF262B38"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/add"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FF262B38"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/Proportion"
                />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="USD"
                android:layout_marginTop="11.5dp"
                android:background="#FF1860A9"
                android:textColor="#FFFFFFFF"
                android:textSize="9dp"/>
            <LinearLayout
                android:id="@+id/order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@+id/usd">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="订单金额:"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="4dp"
                    android:text="1,002.42(带杠杆)"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/order_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:layout_toRightOf="@+id/usd"
                android:layout_below="@+id/order_amount">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="现金可买:"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:text="1,000,000"
                    android:textColor="#FF2F97FF"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="持仓可卖:"
                    android:textColor="#FFFFFFFF"
                    android:textSize="11dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="2dp"
                    android:text="504,000"
                    android:textColor="#FFC7A575"
                    android:textSize="11dp"/>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18pt"
                android:text="订单附加条件:"
                android:textColor="#FFFFFFFF"
                android:textSize="13dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"/>
            <FrameLayout
                android:layout_width="115dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="#FF262B38"
                android:layout_gravity="center_vertical"
                >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="5dp"
                   android:text="不允许盘前盘后"
                   android:layout_marginTop="3dp"
                   android:textColor="#FFFFFFFF"
                   android:textSize="12dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFFF"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="94dp"
                    android:src="@mipmap/switch"
                    />



            </FrameLayout>>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <Button
                android:layout_width="149.5dp"
                android:layout_height="40dp"
                android:background="#FF1860A9"
                android:text="买入"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp"
                />
            <Button
                android:layout_width="149.5dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6.5dp"
                android:background="#FFA67F47"
                android:text="卖出"
                android:textColor="#FFFFFFFF"
                android:textSize="15dp"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6.5dp"
                android:background="#262B38"
                android:src="@mipmap/order"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>